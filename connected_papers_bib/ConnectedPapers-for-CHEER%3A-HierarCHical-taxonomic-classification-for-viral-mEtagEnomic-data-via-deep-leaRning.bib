@article{ae78dbf1eb13e92c6654c2d7f96be38dde26dfba,
title = {A probabilistic model to recover individual genomes from metagenomes},
year = {2017},
url = {https://semanticscholar.org/paper/ae78dbf1eb13e92c6654c2d7f96be38dde26dfba},
