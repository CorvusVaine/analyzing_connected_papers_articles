url = {https://www.semanticscholar.org/paper/0d4510f8883cdc2b9d30337a9417dea28e9ec193},
abstract = {Pulmonary actinomycosis (PA) is an uncommon pulmonary infectious disease often is misdiagnosed. Microbiological next-generation sequencing (mNGS) is a high sensitive and culture-independent new molecular technology for precise infectious disease diagnosis. Here we reported a PA case diagnosed by the combination of radial-endobroncheal ultrasonography-guide sheath (R-EBUS-GS) and mNGS, along with a brief review of literature.},
author = {Wei Wang and Dingyu Ren and Chunhua Xu and Q. Yuan and Qian Zhang and Huidi Hu and Q. Xie},
