@article{561ee79518c3a32fa1660c25d5fbcbe60f46f93a,
title = {Systematic review of human gut resistome studies revealed variable definitions and approaches},
year = {2020},
url = {https://www.semanticscholar.org/paper/561ee79518c3a32fa1660c25d5fbcbe60f46f93a},
abstract = {ABSTRACT In this review, we highlight the variations of gut resistome studies, which may preclude comparisons and translational interpretations. Of 22 included studies, a range of 12 to 2000 antibiotic resistance (AR) genes were profiled. Overall, studies defined a healthy gut resistome as subjects who had not taken antibiotics in the last three to 12 months prior to sampling. In studies with de novo assembly, AR genes were identified based on variable nucleotide or amino acid sequence similarities. Different marker genes were used for defining resistance to a given antibiotic class. Validation of phenotypic resistance in the laboratory is frequently lacking. Cryptic resistance, collateral sensitivity and the interaction with repressors or promotors were not investigated. International consensus is needed for selecting marker genes to define resistance to a given antibiotic class in addition to uniformity in phenotypic validation and bioinformatics pipelines.},
author = {J. Ho and Yun Kit Yeoh and Nilakshi Barua and Zigui Chen and G. Lui and S. Wong and Xiao Yang and M. Chan and P. Chan and P. Hawkey and M. Ip},
doi = {10.1080/19490976.2019.1700755},
